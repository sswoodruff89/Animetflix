<!DOCTYPE html>
<html>
  <head>
    <title>Animetflix</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <script type="text/javascript">
      window.logo = "<%= image_url('animetflix_logo_blue.png') %>";
      window.downArrow = "<%= image_url('down_arrow.png') %>";
      window.leftArrow = "<%= image_url('left_arrow.png') %>";
      window.rightArrow = "<%= image_url('right_arrow.png') %>";
      window.playButton = "<%= image_url('play_button.png') %>";
      window.forwardTen = "<%= image_url('forward_10.png') %>";
      window.backTen = "<%= image_url('back_10.png') %>";
      window.mute = "<%= image_url('mute.png') %>";
      window.volume = "<%= image_url('volume.png') %>";
    </script>
    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.0.12/css/all.css" integrity="sha384-G0fIWCsCzJIMAVNQPfjH08cyYaUtMwjJwqiRKxxE/rx96Uroj1BtIQ6MLJuheaO9" crossorigin="anonymous">
  </head>

  <body id="main-body">
    <%= yield %>
  </body>
</html>

